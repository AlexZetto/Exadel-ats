{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "no-plusplus": "off",
    "indent": ["error", 4],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/prefer-stateless-function": [
        0,
        {
            "ignorePureComponents": "true"
        }
    ]
  }
}
